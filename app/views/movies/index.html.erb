<%#  Part 1: Start here... %>
<%= form_tag movies_path, :id => 'ratings_form', :method => :get do %>
  Include:
  <%= @all_ratings.each do |rating| %>
   <%= rating %>
    <!--<%= check_box_tag "ratings[#{rating}]", '', if @checks; @checks.include?(rating) end, :id => "ratings_#{rating}" %>-->
    <%= check_box_tag "ratings[#{rating}]", 1, @checks.include?("#{rating}"), :id => "rating_#{rating}" %>
  <% end  %>
  <%= submit_tag 'Refresh', :class => 'btn btn-primary', :id => "ratings_submit" %>
<% end  %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <!--<th>Movie Title</th>-->
     <th> <%= link_to "Movie Title", movies_path(:sort => "title"), id: "title_header", class: @title %></th>
      <th>Rating</th>
      
      <!--<th>Release Date</th>-->
      <th> <%= link_to "Release Date", movies_path(:sort => "release"), id: "release_date_header", class: @release %></th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>
